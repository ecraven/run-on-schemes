#!/bin/sh

# Get the path to chibi-scheme on this machine.
function path_to_chibi() {
  which chibi-scheme | head -n 1
}

# Get the current path relative to the `run-on-schemes` script.
function get_script_dir() {
  # May require use of `readname -f` on Linux? http://stackoverflow.com/a/1482133
  dirname "$(stat -f "$0")"
}

eval "$(path_to_chibi) $(get_script_dir)/../share/run-on-schemes.scm $@"
